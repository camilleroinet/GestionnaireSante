<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.repas.RepasFragment">

    <data>

        <variable
            name="viewmodelrepas"
            type="com.example.gestionnairesante.ui.repas.vm.VmRepas" />

        <variable
            name="fragRepas"
            type="com.example.gestionnairesante.ui.repas.RepasFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <LinearLayout
                    android:id="@+id/ll_vue_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <!-- everything you already have -->


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpagercharts"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:textSize="18sp"
                        app:tabTextColor="@color/PrimaryColor" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpagertabhost"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_insertPlat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/fab_margin"
                        android:layout_marginBottom="32dp"
                        android:backgroundTint="@color/Error"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:maxImageSize="48dp"
                        app:srcCompat="@android:drawable/ic_input_add" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/fab_margin"
                        android:layout_marginBottom="32dp"
                        android:backgroundTint="@color/SecondaryColor"
                        android:visibility="visible"
                        app:maxImageSize="48dp"
                        app:srcCompat="@android:drawable/ic_input_add" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vue_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/llresume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_etape01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Entrer le nom pour ce menu"
                                android:textSize="@dimen/taille_titre"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/PrimaryColor"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:id="@+id/nomdumenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="@string/nom_du_menu" />

                                <EditText
                                    android:id="@+id/et_nommenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="entrer un nom de menu" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_boutonsMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/valider_nommenu"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_bouton"
                                    android:backgroundTint="@color/SecondaryColor"
                                    android:text="@string/enregistrer"
                                    android:textColor="@color/white" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/annuler_nommenu"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_bouton"
                                    android:text="@string/annuler"
                                    android:textColor="#442C2E"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>


                        <!-- LL pour le choix de la date -->
                        <LinearLayout
                            android:id="@+id/ll_etape_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Choisir une date"
                                    android:textSize="@dimen/taille_titre"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:background="@color/PrimaryColor"
                                    android:orientation="vertical" />
                            </LinearLayout>

                            <DatePicker
                                android:id="@+id/datepicker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:calendarViewShown="false"
                                android:datePickerMode="spinner" />

                            <Spinner
                                android:id="@+id/spinner_periode"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/PrimaryColor"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_validerDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_bouton"
                                    android:backgroundTint="@color/SecondaryColor"
                                    android:text="@string/enregistrer"
                                    android:textColor="@color/white"
                                    android:visibility="visible" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_updateDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_bouton"
                                    android:backgroundTint="@color/SecondaryColor"
                                    android:text="@string/modifier"
                                    android:textColor="@color/white"
                                    android:visibility="gone" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_cancelDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_bouton"
                                    android:text="@string/annuler"
                                    android:textColor="#442C2E"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>


                        <!-- LL des informations concernant le emenu -->
                        <LinearLayout
                            android:id="@+id/etape_information"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Informations concernant ce menu"
                                android:textSize="@dimen/taille_titre"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/PrimaryColor"
                                android:orientation="vertical" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/txt_glucide_total"

                                    android:textSize="@dimen/taille_text" />

                                <TextView
                                    android:id="@+id/totalglucide"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"

                                    android:text="@={viewmodelrepas.totalGlucides}"
                                    android:textSize="@dimen/taille_text" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/txt_calorie_total"

                                    android:textSize="@dimen/taille_text" />

                                <TextView
                                    android:id="@+id/totalcalorie"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@={viewmodelrepas.totalCalories}"

                                    android:textSize="@dimen/taille_text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/nb_plat_menu"

                                    android:textSize="@dimen/taille_text" />

                                <TextView
                                    android:id="@+id/nbplats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"

                                    android:text="@={viewmodelrepas.totalPlats}"
                                    android:textSize="@dimen/taille_text" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_etape2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Les plats composants votre menu"
                            android:textSize="@dimen/taille_titre"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/PrimaryColor"
                            android:orientation="vertical" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/liste_menu"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/taille_recyclers"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/llresume" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/liste_repas"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/taille_recyclers2"
                            app:layout_constraintBottom_toTopOf="@+id/ll_boutons"
                            app:layout_constraintStart_toStartOf="parent" />

                        <LinearLayout
                            android:id="@+id/ll_boutons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/valider_menu"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_bouton"
                                android:backgroundTint="@color/SecondaryColor"
                                android:text="@string/enregistrer"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/annuler_menu"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_bouton"
                                android:text="@string/annuler"
                                android:textColor="#442C2E"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </TableLayout>
        </ScrollView>
    </LinearLayout>

</layout>