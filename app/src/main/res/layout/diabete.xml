<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.diabete.DiabeteFragment">

    <data>

        <variable
            name="vmdiabete"
            type="com.example.gestionnairesante.ui.diabete.vm.VMDiabete" />

        <variable
            name="fragDiabete"
            type="com.example.gestionnairesante.ui.diabete.DiabeteFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpagercharts"
                android:layout_width="wrap_content"
                android:layout_height="250dp"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="18sp"
                app:tabTextColor="@color/PrimaryColor" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpagertabhost"
                android:layout_width="wrap_content"
                android:layout_height="350dp" />

    </LinearLayout>
</layout>